<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.aniceterickouame.androidmyui.Main_Menu">

    <TextView android:text="MY UI" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ripple Button"
        android:id="@+id/btnMenuRip"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android process button"
        android:id="@+id/btnMenuProcessButton"
        android:layout_below="@+id/btnMenuRip"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android-circlebutton"
        android:id="@+id/btncirclebutton"
        android:layout_below="@+id/btnMenuProcessButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="circular progress button"
        android:id="@+id/btncircularprogressBtn"
        android:layout_below="@+id/btncirclebutton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
